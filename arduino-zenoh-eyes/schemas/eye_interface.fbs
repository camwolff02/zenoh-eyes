namespace eye_interface;

table EyeCommand {
    look_ud: short;  // [deg], -90 down, 0 straight, 90 up
    look_lr: short;  // [deg], -90 right, 0 straight, 90 left
    eye_sep: ushort;  // [deg], 0 closed, 90 open
    blink: bool;  // True for blinking, False otherwise
}

root_type EyeCommand;